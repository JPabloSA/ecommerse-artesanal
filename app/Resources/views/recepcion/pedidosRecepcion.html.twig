<div class="container-fluid">
	<div class="row">

		<div class="container-fluid">
			<h2 class="alert alert-info">Pedidos</h2>
		</div>

		<div class="container-fluid">
			<div class="table-responsive">
			<table class="table table-borderless">
				<thead>
					<tr>
						<th>Cliente</th>
						<th>Fecha</th>
						<th>Total</th>
					</tr>
				</thead>
				<tbody>
				{% for pedido in pedidos %}
					<tr>
						<td>{{pedido.Clientecliente.Nombre}}</td>
						<td>{{pedido.Fecha | date('d-m-Y')}}</td>
						<td>Q. {{pedido.Total}}</td>
						<td>
							<button class="btn btn-raised btn-secondary" onclick="detalle_precepcion({{pedido.Idpedido}})">
								<i class="fas fa-info-circle"></i> Detalles
							</button>
						</td>
					</tr>
				{% endfor %}
					
				</tbody>
			</table>
			</div>
		</div>

	</div>
</div>

<script type="text/javascript">
function detalle_precepcion(idp){
    $.ajax({
      type: "POST",
      url: "{{path('detallePedidonuevo')}}",
      data:{ 
        id:idp
      },
      success: function (html) {
        $("#page-content-wrapper").html(html); 
      }
    });
  }
</script>
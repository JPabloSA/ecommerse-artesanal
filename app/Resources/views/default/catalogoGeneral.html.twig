    {% if app.user != null %}
      <div class="row">
      <div class="col-md-8"></div>
      <div class="col-md-4">
        <div class="col-md-4">
          <button class="btn btn-warning" onclick="carritover({{empresa.Idempresa}})">
            <i class="fas fa-shopping-cart"></i> Carrito
          </button>
        </div>
      </div>
    </div>
    {% endif %}
    
    

    <div class="row">
          {% for producto in productos %}
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 ">
                    <div class="thumbnail">
                          <h2><span class="badge badge-primary btn-lg btn-block">{{producto.nombre}}</span></h2>
                          <h2><img id="{{producto.idproducto}}"  src="{{asset(producto.imgurl)}}" alt="..." class="img-responsive"></h2>
                          <h2 align="center"><span class="badge badge-secondary btn-lg btn-block">Precio Normal Q{{producto.precio}}</span><h2>
                          <h2 align="center"><span class="badge badge-success btn-lg btn-block">Precio Mayorista Q{{producto.preciomayorista}}</span><h2>
                          <h2>
                            <span class="badge badge-info btn-secondary btn-block">Unidades Ordenadas
                              <input id="cantidad{{producto.Idproducto}}"  class="form-control" type="number" value="1" >
                            </span>
                          </h2>
                </div>
                <button class="btn btn-danger" onclick="agregar_carrito({{producto.Idproducto}})">
                  <i class="fas fa-cart-plus"></i> Agregar a Compras
                </button>
          </div>
          {% endfor %}
      </div>


  </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>



<script type="text/javascript">

    function agregar_carrito(idprod){
      $.ajax({
                type: "POST",
                url: "{{path('carro', {'id': empresa.Idempresa})}}",
                data:{
                  idemp:"{{empresa.Idempresa}}",
                  id2:idprod,
                  cantidad:$("#cantidad"+idprod).val()
                },
                success: function () {
                  $("#content-page").load("{{path('catalogoGeneral',{id:empresa.Idempresa})}}");
                }
            });

    }

    function carritover(idemp){
      $.ajax({
                type: "POST",
                url: "{{path('carroVista',{id:empresa.Idempresa})}}",
                data:{
                },
                success: function (html) {
                  $("#content-page").html(html); 
                }
            });

    }



</script>

  <script>
    // Get the modal
        {% for producto in productos %}
        var modal = document.getElementById('myModal');
        var img = document.getElementById('{{producto.idproducto}}');
        var modalImg = document.getElementById("img01");
        var captionText = document.getElementById("caption");
        img.onclick = function(){
            modal.style.display = "block";
            modalImg.src = this.src;
            captionText.innerHTML = this.alt;
        };
        var span = document.getElementsByClassName("close")[0];
        span.onclick = function() {
            modal.style.display = "none";
        };
        {% endfor %}

  </script>


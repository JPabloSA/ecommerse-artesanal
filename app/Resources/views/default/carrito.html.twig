<h2><span class="badge badge-warning btn-lg btn-block">Artículos en el Carro de Compras</span></h2>
<span class="badge badge-secondary btn-lg ">Nombre de cliente: {{cliente.nombre}} {{cliente.apellido}}</span>
<span class="badge badge-info btn-lg ">Direccion de cliente: {{cliente.direccion}} </span>
<span class="badge badge-info btn-lg ">No. Pedido: {{pedido[0].Codigopedido}} </span>
<span class="badge badge-info btn-lg ">Empresa: {{empresa.Nombre}} </span>


<div class="row">
  <div class="col-md-6">
    <table class="table table-striped">
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-primary">
      <a class="navbar-brand" href="{{path('principal')}}" style="padding:5px">
        <i class="fa fa-list-ul fa-1x" aria-hidden="true"></i>  Empresas
      </a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-between" id="navbar">
        <div class="navbar-nav">

        </div>

        {% if app.user == null %}
          <div class="navbar-nav">
          <a class="nav-item nav-link" href="{{path('login')}}">
            <i class="fas fa-user"></i> Iniciar Sesion
          </a>
          <a href="#" class="nav-item nav-link">
             <i class="fas fa-sign-out-alt"></i> Registrarse
          </a>
        </div>
        {% endif %}
        {% if app.user != null %}
          <div class="navbar-nav">
          <a href="#" class="nav-item nav-link">
            <i class="fa fa-user"></i> {{app.user.Username}}
          </a>
          <a class="nav-item nav-link" href="{{path('logout')}}">
            <i class="fas fa-sign-out-alt"></i> Cerrar Sesion
          </a>
        </div>
        {% endif %}

      </div>

    </nav>
    <hr>
    <hr>
    <h2><span class="badge badge-warning btn-lg btn-block">Artículos en el Carro de Compras</span></h2>
    <span class="badge badge-secondary btn-lg ">Nombre de cliente: {{cliente.nombre}} {{cliente.apellido}}</span>
  
    <div class="container-fluid">
      <br>
      <table class="table table-striped table-dark">
        <thead class="thead-dark">
        <tr>
          <th scope="col">ID Detalle</th>
          <th scope="col">Producto</th>
          <th scope="col">Unidades</th>
          <th scope="col">Precio Unidad</th>
          <th scope="col">Total</th>
          <th scope="col"></th>
        </tr>
      </thead>

      {% for detalle in detalles %}
        <tbody>
          <tr>
            <td>{{detalle.Productoproducto.Nombre}}</td>
            <td>{{detalle.cantidad}}</td>
            <td>{{detalle.total}}</td>
            <td>
              <button class="btn btn-danger" onclick="quitar_prod({{detalle.Iddetallepedido}})">
                <i class="fa fa-trash"></i> Quitar
              </button>

            </td>
          </tr>
        </tbody>
      {% endfor %}
    </table>
  </div>

  <div class="col-md-4">
    <button class="btn btn-success">
      <i class="fa fa-arrow-right"></i> Pedir
    </button>
    <button class="btn btn-danger">
      <i class="fa fa-ban"></i> Cancelar
    </button>
    <br><br>

    <button class="btn btn-warning btn-lg" onclick="catalogo_ir()">
      Catalogo
    </button>
  </div>

</div>

<script type="text/javascript">
  function quitar_prod(iddetalle){

    $.ajax({
      type: "POST",
      url: "{{path('quitarProducto')}}",
      data:{
        id:iddetalle
      },
      success: function () {
        $("#content-page").load("{{path('carroVista',{id:empresa.Idempresa})}}"); 
      }
    });

  }

  function catalogo_ir(){
    $("#content-page").load("{{path('catalogoGeneral',{id:empresa.Idempresa})}}");
  }

</script>
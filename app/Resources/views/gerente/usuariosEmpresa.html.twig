	<div class="row">

		<div class="container-fluid">
			<h1 class="alert alert-info">Lista de usuarios</h1>
			
			<button class="btn btn-success" onclick="nuevo_user()">
				<i class="fa fa-plus-circle"></i> Nuevo Usuario
			</button>
			<br>
			<br>
		</div>
    {# NOTIFICACIONES #}
    <div class="container-fluid">
      {#notifiaciones de realizado#}
      {% for message in app.session.flashbag().get('hecho') %}
        <div class="alert alert-success">{{message}}</div>
      {% endfor %}
    </div>
      {#notifiaciones de algun error#}
    <div class="container-fluid">
      {% for message1 in app.session.flashbag().get('error') %}
        <div class="alert alert-danger">{{message1}}</div>
      {% endfor %}
    </div>
    {#notifiaciones de informacion#}
    <div class="container-fluid">
      {% for message2 in app.session.flashbag().get('info') %}
        <div class="alert alert-info">{{message2}}</div>
      {% endfor %}
    </div>
    {#FIN NOTIFIACIONES#}

		<div class="container-fluid">

			<table class="table">
  <thead class="thead-dark">
    <tr>	
      <th scope="col">Nombre</th>
      <th scope="col">Puesto</th>
      <th scope="col">Username</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  	{% for colaborador in colaboradores %}
  	<tr>
      <td>{{colaborador.Nombre}}</td>
      <td>{{colaborador.Puesto}}</td>
      <td>{{colaborador.Usuariousuario.Username}}</td>
      <td>
      	<button class="btn btn-default">
      		<i class="fa fa-user-edit fa-1x"></i> Editar usuario
      	</button>
      </td>
    </tr>    
  	{% endfor %}
  </tbody>
</table>

		</div>

	</div>

<script type="text/javascript">
	function nuevo_user(){
		$("#page-content-wrapper").load("{{path('nuevousuarioEmpresa')}}");
	}
</script>
    <title>{% block title %}{% endblock %}</title>
      
    <!-- CSS de Bootstrap -->
    <link href="{{asset('public/vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet" media="screen">
    <link href="{{asset('public/vendor/fontawesome/css/all.css')}}" rel="stylesheet">
    <link href="{{asset('public/css/style.css')}}" rel="stylesheet">



    <!-- Custom fonts for this template -->
